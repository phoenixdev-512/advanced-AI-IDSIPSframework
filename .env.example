# Project Argus Configuration

# Network Interface Configuration
CAPTURE_INTERFACE=eth0
INLINE_MODE=false  # Set to true for inline IPS mode, false for passive IDS mode

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=argus
INFLUXDB_BUCKET=network_traffic

# Model Configuration
MODEL_PATH=data/models/autoencoder.h5
TFLITE_MODEL_PATH=data/models/autoencoder.tflite
MODEL_THRESHOLD=0.1  # Reconstruction error threshold for anomaly detection

# Trust Score Configuration
TRUST_SCORE_MIN=0
TRUST_SCORE_MAX=100
TRUST_SCORE_CRITICAL_THRESHOLD=20
TRUST_SCORE_WARNING_THRESHOLD=50

# IPS Configuration
IPS_ENABLED=false
AUTO_BLOCK_ENABLED=false
QUARANTINE_DURATION=3600  # seconds

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false

# Scanning Configuration
NMAP_SCAN_ENABLED=true
NMAP_SCAN_TIMEOUT=300  # seconds

# Threat Intelligence
THREAT_FEED_ENABLED=true
THREAT_FEED_UPDATE_INTERVAL=3600  # seconds
